@model EStudy.Application.ViewModels.Schedule.ScheduleDayOfWeek.ScheduleDayOfWeekEditModel

@{
    ViewData["Title"] = $"Редагування {Model.Id}";
}

<h1>EditDayOfWeek</h1>

<h4>ScheduleDayOfWeekEditModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDayOfWeek">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <input asp-for="Day" class="form-control" />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayEng" class="control-label"></label>
                <input asp-for="DayEng" class="form-control" />
                <span asp-validation-for="DayEng" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DayOfWeeks">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
