@model EStudy.Application.ViewModels.Schedule.ScheduleEditModel

@{
    ViewData["Title"] = $"Редагування {Model.Id}";
}

<h1>Редагування розкладу</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Schedule" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="ScheduleGroupId" class="control-label"></label>
                <select asp-for="ScheduleGroupId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Data.ScheduleGroups, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleAudienceId" class="control-label"></label>
                <select asp-for="ScheduleAudienceId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Data.ScheduleAudiences, "Id", "NameAudience"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleDisciplineId" class="control-label"></label>
                <select asp-for="ScheduleDisciplineId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Data.ScheduleDisciplines, "Id", "DisciplineName"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleTeacherId" class="control-label"></label>
                <select asp-for="ScheduleTeacherId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Data.ScheduleTeachers, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleLessonId" class="control-label"></label>
                <select asp-for="ScheduleLessonId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Data.ScheduleLessons, "Id", "Number"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleTypeLessonId" class="control-label"></label>
                <select asp-for="ScheduleTypeLessonId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Data.ScheduleTypeLessons, "Id", "TypeName"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleDayOfWeekId" class="control-label"></label>
                <select asp-for="ScheduleDayOfWeekId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Data.ScheduleDayOfWeeks, "Id", "Day"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleParityOfWeekId" class="control-label"></label>
                <select asp-for="ScheduleParityOfWeekId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Data.ScheduleParityOfWeeks, "Id", "Week"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateLesson" class="control-label"></label>
                <input asp-for="DateLesson" class="form-control" />
                <span asp-validation-for="DateLesson" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsReplacement" /> @Html.DisplayNameFor(model => model.IsReplacement)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
